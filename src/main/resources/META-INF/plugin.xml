<idea-plugin>
    <id>cn.boz.jb.plugin.spd-editor</id>
    <name>Erayt Spd Editor</name>
    <vendor email="1173626291@qq.com" url="http://blog.csdn.net/blueboz">Blueboz.Chen</vendor>

    <description><![CDATA[
    This is an Spd editor plugin,Which support features such as flow viewer,flow edit,flow image export ,save.
    ]]></description>
    <version>1.0.0</version>
    <change-notes>
        support edit for spd file.which is activiti like editor .this is the first version .
    </change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileEditorProvider implementation="cn.boz.jb.plugin.idea.fileeditor.MyFileEditorProvider"
                            id="myFileEditorProvider" order="last">
        </fileEditorProvider>
        <toolWindow factoryClass="cn.boz.jb.plugin.idea.toolwindow.MyToolWindowFactory" id="myToolwindow"  anchor="right" order="last"></toolWindow>
        <fileType name="spd editor" extensions="spd" implementationClass="cn.boz.jb.plugin.idea.filetype.SpdFileType"></fileType>
    </extensions>


    <actions>
        <!-- Add your actions here -->
        <action class="cn.boz.jb.plugin.addbom.AddBomAction" id="addBomAction" description="添加UTF-8 BOM" text="AddBom" icon="SpdEditorIcons.BOM_16_ICON">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="before" relative-to-action="EditorPaste"></add-to-group>
        </action>
    </actions>


</idea-plugin>